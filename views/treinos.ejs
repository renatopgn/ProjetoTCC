<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gerenciar Treinos</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/treinos.css">
</head>
<body>

  <%- include('partials/navbar') %>

  <div style="height: 110px;"></div>

  <header class="top-bar">
    <h1>Treinos</h1>
    <button class="add-btn" onclick="abrirModal()">Adicionar Treino +</button>
  </header>

  <!-- Modal -->
  <div class="modal-overlay" id="modal">
    <div class="modal">
      <h2>Novo Treino</h2>
      <form id="formTreino" action="/treinos/add" method="POST">
        <input type="hidden" id="treinoId" name="id">

        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" required></textarea>

        <label for="objetivo">Objetivo:</label>
        <input type="text" id="objetivo" name="objetivo" required>

        <label for="divisao">Divisão Muscular:</label>
        <input type="text" id="divisao" name="divisao" required>

        <% if (user.tipo === 'professor') { %>
          <label for="alunoId">Aluno:</label>
          <select id="alunoId" name="alunoId" required>
            <% usuarios.forEach(u => { %>
              <option value="<%= u.id %>"><%= u.nome %> - <%= u.cpf %></option>
            <% }) %>
          </select>
        <% } %>

          <% if (user.tipo === 'aluno') { %>
            <div class="aviso-treino">
              ⚠️ <strong>Atenção!</strong> Este treino pode ser lesivo se executado incorretamente. 
              Você é responsável pela sua própria execução. 
            </div>
          <% } %>

        <div class="modal-buttons">
          <button type="button" onclick="fecharModal()">Cancelar</button>

          <button type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Lista -->
  <section class="treino-lista" id="listaTreinos">
    <% if (lista && lista.length > 0) { %>
      <% lista.forEach(treino => { %>
        <div class="treino-card"
             data-id="<%= treino.id %>"
             data-nome="<%= treino.nome %>"
             data-descricao="<%= treino.descricao %>"
             data-objetivo="<%= treino.objetivo %>"
             data-divisao="<%= treino.divisao %>">

          <div class="menu-container">
            <button class="favorito-btn" onclick="toggleFavorito(this)">♥</button>
            <button class="menu-btn" onclick="toggleMenu(this)">⋮</button>
            <div class="menu-dropdown">
              <button type="button" onclick="editarTreino(this)">Editar</button>
              <form action="/treinos/delete/<%= treino.id %>" method="POST" style="margin: 0;">
                <button type="submit">Excluir</button>
              </form>
            </div>
          </div>

          <h3><%= treino.nome %></h3>
          <p><strong>Objetivo:</strong> <%= treino.objetivo %></p>
          <p><strong>Divisão:</strong> <%= treino.divisao %></p>
          <p class="descricao-curta"><%= treino.descricao %></p>

          <% if (user.tipo === 'professor') { %>
            <p class="nome-aluno"><strong>Aluno:</strong> <%= treino.User ? treino.User.nome : "N/A" %></p>
          <% } %>

          <button class="view-btn" onclick="verDetalhes('<%= treino.nome %>', '<%= treino.descricao.replace(/\n/g,  ) %>', '<%= treino.objetivo %>', '<%= treino.divisao %>')">Ver</button>
        </div>
      <% }); %>
    <% } else { %>
      <p id="nenhumcadastro" style="text-align: center;">Nenhum treino cadastrado ainda.</p>
    <% } %>
  </section>

  <!-- Modal de confirmação de senha -->
<div id="modalSenha" class="modal-senha" style="display: none;">
  <div class="modal-conteudo">
    <h3>Confirme sua senha</h3>
    <input type="password" id="senhaConfirmar" placeholder="Digite sua senha">
    <div class="botoes-modal">
      <button id="cancelarSenha">Cancelar</button>
      <button id="confirmarSenha">Confirmar</button>
    </div>
    <p id="erroSenha" style="color: red; display: none;">Senha incorreta!</p>
  </div>
</div>


  <script src="/js/treinos.js"></script>
</body>
</html>
